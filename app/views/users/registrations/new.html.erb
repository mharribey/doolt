
<div class='details' style='text-align:center;width:400px;'>

<h2 class='title'>S'enregistrer</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'field3' %>
  </div>

  <div class="field">
    <%= f.label :password,'Mot de passe' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'field3' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirmation' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'field3' %>
  </div>

  <div class="actions">
    <%= f.submit "CrÃ©er mon compte", style: 'font-size:16px;vertical-align:middle;margin-top:20px;' %>
  </div>
<% end %>

<%= render "users/shared/links" %>

</div>
