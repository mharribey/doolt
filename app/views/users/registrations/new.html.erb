<div class="container">

      <div class="header">
        <h1 style ='font-size:3em'>Doolt</h1>
        <p class="lead">Découvrez doolt : une nouvelle interface vous permettant de gérer vos tâches via une to-do list épurée, simple, et efficace.</p>
      </div>
</div>

<hr class='barre'/>

<div class='home' style='text-align:center;width:400px;'>

<h2 class='title'> Viens vite créer ton compte !</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: 'field3', :required => true, placeholder: 'Email' %>
    <%= f.password_field :password, autocomplete: "off", class: 'field3', :required => true, placeholder: 'Mot de Passe' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'field3', :required => true, placeholder: 'Confirmation' %>
    <%= f.submit "Créer mon compte", style: 'font-size:16px;vertical-align:middle;margin-top:20px;', id: 'button' %>
</div>
<% end %>

<%= render "users/shared/links" %>

</div>
